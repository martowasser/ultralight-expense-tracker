generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum InstitutionType {
  BANK
  FINTECH
  CRYPTO_EXCHANGE
  PAYMENT_PLATFORM
}

enum Currency {
  ARS
  USD
  EUR
  GBP
  JPY
  CAD
  AUD
  CHF
  CNY
  BRL
}

// Investment Module Enums
enum AssetType {
  CRYPTO
  STOCK
  ETF
}

enum DividendType {
  REGULAR
  SPECIAL
  CAPITAL_GAIN
}

enum ExpenseCategory {
  CREDIT_CARD
  SERVICE
  RENT
  INSURANCE
  TAX
  SUBSCRIPTION
  BUILDING_FEE
  OTHER
}

enum PaymentMethod {
  BANK_TRANSFER
  DIRECT_DEBIT
  CASH
  CRYPTO_EXCHANGE
  CREDIT_CARD
}

enum CardBrand {
  VISA
  MASTERCARD
  AMEX
  OTHER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  expenses           Expense[]
  monthlyExpenses    MonthlyExpense[]
  institutions       Institution[]
  accounts           Account[]
  creditCards        CreditCard[]
  settings           UserSettings?
  // Investment module relations
  customAssets       Asset[]
  investments        Investment[]
  dividends          Dividend[]
  portfolioSnapshots PortfolioSnapshot[]
}

model Institution {
  id        String          @id @default(cuid())
  userId    String
  name      String
  type      InstitutionType
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  accounts    Account[]
  creditCards CreditCard[]

  @@index([userId])
}

model Account {
  id            String   @id @default(cuid())
  userId        String
  institutionId String
  name          String
  currency      Currency @default(ARS)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user                   User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  institution            Institution @relation(fields: [institutionId], references: [id], onDelete: Cascade)
  expensesAsPaymentSource Expense[]  @relation("PaymentSourceAccount")

  @@index([userId])
  @@index([institutionId])
}

model CreditCard {
  id            String    @id @default(cuid())
  userId        String
  institutionId String
  name          String
  brand         CardBrand @default(OTHER)
  lastFourDigits String?
  dueDay        Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user                   User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  institution            Institution @relation(fields: [institutionId], references: [id], onDelete: Cascade)
  expensesPaidWithCard   Expense[]   @relation("PaidWithCard")
  expensesLinkedToCard   Expense[]   @relation("LinkedCreditCard")

  @@index([userId])
  @@index([institutionId])
}

model UserSettings {
  id                  String   @id @default(cuid())
  userId              String   @unique
  usdToArsRate        Decimal  @default(1200)
  // Investment module settings
  displayCurrency     Currency @default(USD)  // Preferred display currency for investments
  preferredCurrencies String[] @default(["USD", "EUR", "GBP"])  // List of preferred currencies
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Expense {
  id                 String          @id @default(cuid())
  userId             String
  name               String
  amount             Decimal
  dueDay             Int
  category           ExpenseCategory @default(OTHER)
  currency           Currency        @default(ARS)
  paymentMethod      PaymentMethod?
  paymentSourceId    String?
  paidWithCardId     String?
  linkedCreditCardId String?
  isActive           Boolean         @default(true)
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt

  user              User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  paymentSource     Account?         @relation("PaymentSourceAccount", fields: [paymentSourceId], references: [id], onDelete: SetNull)
  paidWithCard      CreditCard?      @relation("PaidWithCard", fields: [paidWithCardId], references: [id], onDelete: SetNull)
  linkedCreditCard  CreditCard?      @relation("LinkedCreditCard", fields: [linkedCreditCardId], references: [id], onDelete: SetNull)
  monthlyExpenses   MonthlyExpense[]
  tags              ExpenseTag[]

  @@index([userId])
  @@index([paymentSourceId])
  @@index([paidWithCardId])
  @@index([linkedCreditCardId])
}

model ExpenseTag {
  id        String   @id @default(cuid())
  expenseId String
  name      String
  createdAt DateTime @default(now())

  expense Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)

  @@index([expenseId])
}

model MonthlyExpense {
  id        String   @id @default(cuid())
  expenseId String
  userId    String
  month     String   // Format: YYYY-MM
  amount    Decimal
  isPaid    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  expense Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([expenseId, month])
  @@index([userId, month])
}

// ==========================================
// Investment Module Models
// ==========================================

model Asset {
  id          String    @id @default(cuid())
  symbol      String    @unique  // e.g., BTC, AAPL, SPY
  name        String              // Bitcoin, Apple Inc., S&P 500 ETF
  type        AssetType           // CRYPTO, STOCK, ETF
  precision   Int       @default(2)  // Decimal places (6 for crypto, 2 for stocks)
  isActive    Boolean   @default(true)
  isGlobal    Boolean   @default(true)  // true for pre-populated assets, false for user-created
  userId      String?   // null for global assets, set for user-created custom assets
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  investments Investment[]

  @@index([type])
  @@index([userId])
  @@index([symbol, isActive])
}

model Investment {
  id             String   @id @default(cuid())
  userId         String
  assetId        String
  quantity       Decimal  @db.Decimal(18, 6)  // Supports up to 6 decimal places for crypto
  purchasePrice  Decimal  @db.Decimal(18, 2)  // Price per unit at purchase
  purchaseCurrency Currency @default(USD)
  purchaseDate   DateTime
  platform       String   // Brokerage/exchange name (e.g., "Binance", "Robinhood")
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  asset     Asset      @relation(fields: [assetId], references: [id])
  dividends Dividend[]

  @@index([userId])
  @@index([assetId])
  @@index([userId, assetId])
}

model Dividend {
  id           String       @id @default(cuid())
  userId       String
  investmentId String
  amount       Decimal      @db.Decimal(18, 2)
  currency     Currency     @default(USD)
  paymentDate  DateTime
  type         DividendType @default(REGULAR)
  isReinvested Boolean      @default(false)
  notes        String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  investment Investment @relation(fields: [investmentId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([investmentId])
  @@index([userId, paymentDate])
}

model PortfolioSnapshot {
  id           String   @id @default(cuid())
  userId       String
  snapshotDate DateTime
  totalValue   Decimal  @db.Decimal(18, 2)  // Total portfolio value
  costBasis    Decimal  @db.Decimal(18, 2)  // Total cost basis
  cryptoValue  Decimal  @db.Decimal(18, 2)  // Value of crypto holdings
  stockValue   Decimal  @db.Decimal(18, 2)  // Value of stock/ETF holdings
  holdings     Json     // JSON field with individual holding values
  currency     Currency @default(USD)       // Currency of snapshot values
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, snapshotDate])
}

model PriceCache {
  symbol      String   @id  // Asset symbol as primary key
  price       Decimal  @db.Decimal(18, 8)  // Current price
  change24h   Decimal? @db.Decimal(10, 4)  // 24-hour change percentage
  source      String   // Data source (e.g., "binance", "yahoo", "manual")
  fetchedAt   DateTime // When the price was fetched
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ExchangeRateCache {
  id            String   @id @default(cuid())
  baseCurrency  String   // Base currency (e.g., "USD")
  targetCurrency String  // Target currency (e.g., "EUR")
  rate          Decimal  @db.Decimal(18, 8)  // Exchange rate
  source        String   // Data source (e.g., "exchangerate.host", "openexchangerates")
  fetchedAt     DateTime // When the rate was fetched
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([baseCurrency, targetCurrency])
  @@index([baseCurrency])
  @@index([fetchedAt])
}
